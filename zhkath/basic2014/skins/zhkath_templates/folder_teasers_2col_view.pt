<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<tal:comment tal:condition="nothing">
    Startseite
    changes
    ksuess 01.11.2013 FeedFeederItem anzeigen auf Startseite
</tal:comment>

<body>

<metal:title fill-slot="content-title"></metal:title>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core"
                    tal:define="kssClassesView context/@@kss_field_decorator_view;
                                getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                templateId template/getId">

    <div metal:define-macro="text-field-view"
         id="parent-fieldname-text" class="stx"
         tal:define="kss_class python:getKssClasses('text',
                     templateId=templateId, macro='text-field-view');
                     has_text exists:context/aq_explicit/getText;
                     text python:has_text and here.getText() or ''"
         tal:condition="text"
         tal:attributes="class python:test(context.Format() in ('text/structured',
                                               'text/x-rst', ), 'stx' + kss_class, 'plain' + kss_class)">
        <div metal:define-slot="inside" tal:replace="structure text">The body</div>
    </div>

    <metal:listingmacro define-macro="listing">
    <tal:foldercontents define="contentFilter contentFilter|request/contentFilter|nothing;
	                    contentFilter python:contentFilter and dict(contentFilter) or {};
                        limit_display limit_display|request/limit_display|nothing;
                        limit_display python:limit_display and int(limit_display) or None;
                        more_url more_url|request/more_url|string:folder_contents;
                        is_a_topic python:context.portal_type=='Topic';
                        folderContents folderContents|nothing; 
                        folderContents python:folderContents or is_a_topic and context.queryCatalog(batch=True, **contentFilter) or context.getFolderContents(contentFilter, batch=True, b_size=limit_display or 100);
                        site_properties context/portal_properties/site_properties;
                        use_view_action site_properties/typesUseViewActionInListings|python:();
                        Batch python:modules['Products.CMFPlone'].Batch;
                        b_start python:request.get('b_start', 0);
                        batch python:isinstance(folderContents, Batch) and folderContents or Batch(folderContents, limit_display or 100, int(b_start), orphan=1);
                        batch python:context.portal_type=='Collection' and context.results(b_start=b_start) or batch;
                        cooked_batch python:context.cookFolderTeaser2colView(batch=batch);
                        isAnon context/@@plone_portal_state/anonymous;
                        normalizeString nocall: context/plone_utils/normalizeString;
                        toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                        show_about python:not isAnon or site_properties.allowAnonymousViewAbout;
                        navigation_root_url context/@@plone_portal_state/navigation_root_url;
                        pas_member context/@@pas_member;">
    <tal:listing condition="batch">

    <div tal:repeat="row cooked_batch" class="teaserRow2col">

        <tal:block metal:define-slot="entries">
            <tal:entry tal:repeat="item row">
            <tal:block tal:define="item_url item/getURL|item/absolute_url;
                                   item_id item/getId|item/id;
                                   item_title_or_id item/pretty_title_or_id|item/Title|nothing;
                                   item_description item/Description;
                                   item_type item/portal_type;
                                   item_type_title item/Type;
                                   item_modified item/ModificationDate;
                                   item_created item/CreationDate;
                                   item_icon python:plone_view.getIcon(item);
                                   item_type_class python:'contenttype-' + normalizeString(item_type);
                                   item_wf_state item/review_state|python: context.portal_workflow.getInfoFor(item, 'review_state', '');
                                   item_wf_state_class python:'state-' + normalizeString(item_wf_state);
                                   item_creator item/Creator;
                                   item_start item/start|item/StartDate|nothing;
                                   item_end item/end|item/EndDate|nothing;
                                   item_sametime python: item_start == item_end;
                                   item_samedate python: (item_end - item_start &lt; 1) if item_type == 'Event' else False;
                                   number repeat/item/number;
                                   end python: number==2 and 'teaserLastRowItem' or '';
                                   rowindex python:repeat['row'].index;
                                   itemindex python:repeat['item'].index;
                                   item_link item/getLink;">

                <div class="tileItem visualIEFloatFix" 
                	 tal:attributes="class python:'tileItem visualIEFloatFix ' + end + (item_type=='FeedFeederItem' and ' FeedFeederItem' or ' NewsItem') + ' newsitem' + str(rowindex)+str(itemindex)"
                     tal:define="item_object item/getObject;">


                    <h2 class="tileHeadline"
                        metal:define-macro="listitem">

                        <a href="#"
                           class="summary url"
                           tal:attributes="href python:test(item_type in use_view_action, item_url+'/view', item_url);"
                           tal:content="item_title_or_id">
                            Item Title
                        </a>

                    </h2>
                    
                    <!-- FeedFeeder Items (Blog Posts) -->
                    <div class="feedfeeder_icon" tal:condition="python:item_type=='FeedFeederItem'">
                        <a href="#" target="_blank" tal:attributes="href item_url">
                            <img src="icon-blog-gross-mit-text.png">
                        </a>
                    </div>
                    
                    <tal:feedfeederimage tal:condition="python:item_type=='FeedFeederItem'">                        
                        <tal:define tal:define="getImageUrl nocall:context/@@zhkath_utils/getImageUrl;
                                    imageurl python:getImageUrl(item_link)">
                            <a href="#" target="_blank" class="feedfeeder_image"
                               tal:attributes="href item_url">
                                 <img tal:condition="not:imageurl" src="platzhalter_blog.jpg" alt="Blog-Item" />
                                 <tal:imageurls tal:condition="imageurl">
                                      <img src="" alt=""
                                          tal:attributes="src imageurl"  alt="Blog-Item" />
                                 </tal:imageurls>
                            </a>
                        </tal:define>
                    </tal:feedfeederimage>

                    <!-- FeedFeeder end -->
                    
                    <a href="#" 
                       tal:condition="exists:item_object/image_mini"
                       tal:attributes="href python:test(item_type in use_view_action, item_url+'/view', item_url)">
                         <img src="" alt=""
                             tal:replace="structure python: path('nocall:item_object/tag')(scale='teaser', css_class='teaserTileImage')" />
                    </a>

                    <div class="documentByLine" style="display: inline" tal:replace="nothing">
                    <tal:block tal:condition="python:context.portal_membership.checkPermission('Modify portal content', context)">
                    <tal:event condition="python: item_type == 'Event'">
                        <span tal:condition="python: item_type == 'Event' and item.location">
                            <span tal:content="string:${item/location}"
                                   class="location">Oslo</span>, 
                             <abbr class="dtstart"
                                   tal:attributes="title python:item_start"
                                   tal:content="python:toLocalizedTime(item_start,long_format=1)">from date</abbr> -
                             <abbr class="dtend"
                                   tal:attributes="title python:item_end"
                                   tal:content="python:toLocalizedTime(item_end,long_format=1)">to date</abbr>
                        </span>
                        <span tal:condition="python: item_type == 'Event' and not item.location">
                             <abbr class="dtstart"
                                   tal:attributes="title python:item_start"
                                   tal:content="python:toLocalizedTime(item_start,long_format=1)">from date</abbr> -
                             <abbr class="dtend"
                                   tal:attributes="title python:item_end"
                                   tal:content="python:toLocalizedTime(item_end,long_format=1)">to date</abbr>
                        </span>
                    </tal:event>
                    <tal:newsitem condition="python: item_type in ['News Item','zhkathmedienspiegel']">
                        <tal:name tal:condition="item_creator"
                            tal:define="author python:pas_member.info(item_creator)">
                          <span class="documentAuthor" i18n:translate="label_by_author">
                            by
                          <a href="#"
                             tal:attributes="href string:${navigation_root_url}/author/${item_creator}"
                             tal:content="author/name_or_id"
                             tal:omit-tag="not:author"
                             i18n:name="author">
                            Bob Dobalina
                          </a>
                          </span>
                        </tal:name>
                        &mdash;
                        <span class="documentModified">
                              <tal:mod i18n:translate="box_last_modified">
                              last modified
                              </tal:mod>
                              <span tal:replace="python:toLocalizedTime(item_modified,long_format=1)">
                                      August 16, 2001 at 23:35:59
                              </span>
                        </span>
                    </tal:newsitem>
                    </tal:block>
                    <tal:block tal:condition="python:not context.portal_membership.checkPermission('Modify portal content', context)">
                    <tal:event condition="python: item_type == 'Event'">
                        <span tal:condition="python: item_type == 'Event' and item.location">
                            <span tal:content="string:${item/location}"
                                   class="location">Oslo</span>, 
                             <abbr class="dtstart"
                                   tal:attributes="title python:item_start"
                                   tal:content="python:toLocalizedTime(item_start,long_format=1)">from date</abbr> -
                             <abbr class="dtend"
                                   tal:attributes="title python:item_end"
                                   tal:content="python:toLocalizedTime(item_end,long_format=1)">to date</abbr>
                        </span>
                        <span tal:condition="python: item_type == 'Event' and not item.location">
                             <abbr class="dtstart"
                                   tal:attributes="title python:item_start"
                                   tal:content="python:toLocalizedTime(item_start,long_format=1)">from date</abbr> -
                             <abbr class="dtend"
                                   tal:attributes="title python:item_end"
                                   tal:content="python:toLocalizedTime(item_end,long_format=1)">to date</abbr>
                        </span>
                    </tal:event>
                    <tal:newsitem condition="python: item_type in ['News Item','zhkathmedienspiegel']">
                        <span class="documentModified">
                              <span tal:replace="python:toLocalizedTime(item_modified,long_format=0)">
                                      August 16, 2001 at 23:35:59
                              </span>
                        </span>
                    </tal:newsitem>
                    </tal:block>
                    </div>

                    <p class="tileBody" style="display: inline">
                        <span tal:condition="item_description" class="description" tal:content="python:len(item_description)>80 and item_description[:81] + '...' or item_description">
                            description
                        </span>
	                     <span class="tileFooter">
	                        <a href=""
	                           tal:attributes="href python:test(item_type in use_view_action, item_url+'/view', item_url);"
	                           i18n:translate="read_more">
	                        Read More&hellip;
	                        </a>
	                     </span>
                    </p>


                    <div class="visualClear"><!-- --></div>
                </div>

 
            </tal:block>
            </tal:entry>
        </tal:block>
        <div class="visualClear"><!-- --></div>
        </div>

    </tal:listing>
    <metal:empty metal:define-slot="no_items_in_listing">
        <p class="discreet"
           tal:condition="not: batch"
           i18n:translate="description_no_items_in_folder">
            There are currently no items in this folder.
        </p>
    </metal:empty>

    </tal:foldercontents>
    </metal:listingmacro>

<div>&nbsp;</div>
<p><a href="/news" tal:attributes="href string:${portal_url}/news" i18n:translate="">Frühere Nachrichten...</a></p>

</metal:block>
</metal:content-core>

</body>
</html>